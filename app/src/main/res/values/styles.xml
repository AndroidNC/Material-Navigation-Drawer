<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Purple" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>]

        <item name="colorControlHighlight">@color/purple_500</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Navigation Drawer -->
        <item name="colorNavigationItem">@color/menu_item_color_state_list</item>
        <item name="colorNavigationItemSelected">@color/purple_700</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state_list</item>
        <item name="colorPrimaryLight">@color/purple_light</item>

    </style>

    <style name="My.Custom.Design.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="TransparentView">
        <item name="background">@android:color/transparent</item>
    </style>



    <!-- A different theme - Deep Orange -->
    <style name="Theme.Orange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DeepOrange_500</item>
        <item name="colorPrimaryDark">@color/DeepOrange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/DeepOrange_200</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>]

        <item name="colorControlHighlight">@color/DeepOrange_500</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Navigation Drawer -->
        <item name="colorNavigationItem">@color/menu_item_color_state_list</item>
        <item name="colorNavigationItemSelected">@color/DeepOrange_700</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state_list</item>
        <item name="colorPrimaryLight">@color/DeepOrange_light</item>

    </style>

</resources>